<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@color/white"
    android:minHeight="80dp"

    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"
            android:text="无锡搜工作有限公司"
            android:textColor="@color/black"
            android:textSize="@dimen/text_medium_size" />

        <me.next.tagview.TagCloudView
            android:id="@+id/tag_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="-6dp"
            app:tcvBackground="@drawable/background_tag_selector"
            app:tcvBorder="4dp"
            app:tcvCanTagClick="false"
            app:tcvSingleLine="false"
            app:tcvTextColor="#42A5F5" />
    </RelativeLayout>

</LinearLayout>