<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bgaline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

     >

        <com.csi0n.searchjob.lib.widget.RoundImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"

            android:text="csi0n"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_uname"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/iv_head"
            android:layout_toRightOf="@+id/iv_head"
            android:text="我是聊天内容."
            android:textColor="@color/normal_gray"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/tv_ctime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_uname"
            android:textColor="@color/normal_gray"
            android:layout_marginRight="8dp"
            android:text="10:20"
            android:textSize="@dimen/text_default_size" />

        <TextView
            android:layout_width="20dp"
            android:background="@drawable/red_circle"
            android:layout_height="20dp"
            android:textColor="@color/white"
            android:text="1"
            android:gravity="center"
            android:id="@+id/txt_count"
            android:layout_alignTop="@+id/tv_content"
            android:layout_alignRight="@+id/tv_ctime"
            android:layout_alignEnd="@+id/tv_ctime" />
    </RelativeLayout>
</LinearLayout>