<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_normal_size"
    android:background="#ededed"
    android:paddingBottom="7dp"
    android:paddingLeft="@dimen/view_search_padding"
    android:paddingRight="@dimen/view_search_padding"
    android:paddingTop="7dp">

    <EditText
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        android:background="@drawable/edit_shape"
        android:drawableLeft="@mipmap/ico_search_gray"
        android:focusableInTouchMode="true"
        android:paddingBottom="5dp"
        android:hint="@string/str_please_enter_search_word"
        android:drawablePadding="4dp"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#8C8C8C"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/search_clear"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:src="@mipmap/ico_clear_gray"
        android:visibility="invisible" />

</RelativeLayout>