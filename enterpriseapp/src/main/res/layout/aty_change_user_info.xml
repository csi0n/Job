<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_back_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_main_title_height">

        <include layout="@layout/include_view_line_top"></include>
    </LinearLayout>

    <com.csi0n.searchjob.lib.widget.CScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_normal_height"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edit_city"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_edit_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/btn_choose_city"
                        android:layout_toStartOf="@+id/btn_choose_city"
                        android:background="@drawable/edit_shape"
                        android:enabled="false"
                        android:hint="@string/str_please_choose_city"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/normal_gray"
                        android:textSize="@dimen/text_medium_size" />

                    <Button
                        android:id="@+id/btn_choose_city"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:background="@color/theme_color"
                        android:text="选择城市"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small_size" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_normal_height"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edit_area"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/login_edit_height"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/btn_choose_area"
                        android:layout_toStartOf="@+id/btn_choose_area"
                        android:background="@drawable/edit_shape"
                        android:enabled="false"
                        android:hint="@string/str_please_choose_area"
                        android:paddingLeft="8dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/normal_gray"
                        android:textSize="@dimen/text_medium_size" />

                    <Button
                        android:id="@+id/btn_choose_area"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="10dp"
                        android:background="@color/theme_color"
                        android:text="选择区域"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_small_size" />
                </RelativeLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edit_address_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_normal_size"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btn_choose_area"
                android:layout_toStartOf="@+id/btn_choose_area"
                android:background="@drawable/edit_shape"
                android:gravity="center_vertical"
                android:hint="@string/str_please_enter_company_address_detail"
                android:lines="1"
                android:padding="8dp"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/normal_gray"
                android:textSize="@dimen/text_medium_size" />

            <EditText
                android:id="@+id/edit_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/btn_choose_area"
                android:layout_toStartOf="@+id/btn_choose_area"
                android:background="@drawable/edit_shape"
                android:gravity="left|top"
                android:hint="@string/str_please_enter_company_intro"
                android:lines="8"
                android:padding="8dp"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/normal_gray"
                android:textSize="@dimen/text_medium_size" />
        </LinearLayout>
    </com.csi0n.searchjob.lib.widget.CScrollView>
</LinearLayout>