<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_back_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frag_main_title_height">

        <include layout="@layout/include_view_line_top"></include>

    </LinearLayout>

    <com.csi0n.searchjob.lib.widget.CScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_shape"
                android:text=""
                android:hint="@string/str_please_enter_old_password"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/normal_gray"
                android:textSize="@dimen/text_medium_size" />
            <EditText
                android:id="@+id/edit_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_shape"
                android:text=""
                android:hint="@string/str_please_enter_new_password"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/normal_gray"
                android:textSize="@dimen/text_medium_size" />
            <EditText
                android:id="@+id/edit_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_shape"
                android:text=""
                android:hint="@string/str_please_confirm_new_password"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/normal_gray"
                android:textSize="@dimen/text_medium_size" />
            <Button
                android:id="@+id/btn_submit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="чбошод"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium_size"
                android:layout_width="match_parent"
                android:background="@drawable/btn_selector_theme"
                android:layout_height="@dimen/btn_normal_size" />
        </LinearLayout>
    </com.csi0n.searchjob.lib.widget.CScrollView>
</LinearLayout>